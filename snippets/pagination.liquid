{% if pagination.pages > 1 %}
  <nav role="navigation" class="d-flex text-center justify-content-center my-2">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url }}" class="btn btn-success m-2">Previous</a>
    {% endif %}
    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}" class="btn btn-success m-2">{{ part.title }}</a>
      {% else %}
        <span class="btn btn-success m-2">{{ part.title }}</span>
      {% endif %}
    {% endfor %}
    {% if pagination.next %}
      <a href="{{ pagination.next.url }}" class="btn btn-success m-2">Next</a>
    {% endif %}
  </nav>
{% endif %}