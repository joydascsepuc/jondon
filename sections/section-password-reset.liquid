<style>
  .password-reset {
    border: 1px solid black;
    padding: 20px 30px;
  }

  .form-control {
    border: 1px solid black;
    border-radius: 0;
    box-shadow: none;
  }

  .form-control:focus {
    border: 1px solid black;
    border-radius: 0;
  }

  .submit-buttons {
    padding: 5px 10px;
    border: 1px solid black;
    border-radius: 0;
    box-shadow: none;
  }
</style>

<div class="container">
  <div class="mt-5 pt-5">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="password-reset-div">
          <h5 class="fw-bold text-center mb-3">Registration</h5>
          {% form 'reset_customer_password' %}
            {{ form.errors | default_errors }}

            <div class="password form-group">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                name="customer[password]">
            </div>

            <div class="password_confirm form-group">
              <label for="password_confirmation" class="form-label">Password confirmation</label>
              <input
                type="password"
                class="form-control"
                name="customer[password_confirmation]">
            </div>

            <div class="row">
              <div class="col-md-3"></div>
              <div class="col-md-6">
                <div class="submit d-grid mt-4">
                  <input
                    type="submit"
                    class="btn submit-buttons"
                    value="Reset password">
                </div>
              </div>
              <div class="col-md-3"></div>
            </div>
          {% endform %}
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>