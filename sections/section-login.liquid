<style>
  .login-div,
  .forgot-password-div {
    border: 1px solid black;
    padding: 20px 30px;
  }

  .form-control {
    border: 1px solid black;
    border-radius: 0;
    box-shadow: none;
  }

  .form-control:focus {
    border: 1px solid black;
    border-radius: 0;
  }

  .submit-buttons {
    padding: 5px 10px;
    border: 1px solid black;
    border-radius: 0;
    box-shadow: none;
  }
</style>

<div class="container">
  <div class="mt-5 pt-5">
    <div class="row">
      <div class="col-md-6">
        <div class="login-div">
          <h5 class="fw-bold text-center mb-3">Login</h5>
          {% form 'customer_login' %}
            {{ form.errors | default_errors }}

            <div class="email form-group">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                name="customer[email]">
            </div>

            <div class="password form-group mt-2">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                name="customer[password]">
            </div>

            <div class="row">
              <div class="col-md-3"></div>
              <div class="col-md-6">
                <div class="submit d-grid mt-4">
                  <input
                    type="submit"
                    class="btn submit-buttons"
                    value="Sign in">
                </div>
              </div>
              <div class="col-md-3"></div>
            </div>
          {% endform %}
        </div>
      </div>
      <div class="col-md-6">
        <div class="forgot-password-div">
          <h5 class="text-center fw-bold">Recover password</h5>
          {% form 'recover_customer_password' %}
            {{ form.errors | default_errors }}

            <div class="email form-group">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                name="email">
            </div>

            <div class="mt-2 row">
              <div class="col-md-3"></div>
              <div class="col-md-6 d-grid">
                <button type="submit" class="btn submit-buttons">Recover</button>
              </div>
              <div class="col-md-3"></div>
            </div>
          {% endform %}

        </div>
      </div>
    </div>
  </div>
</div>