<div class="d-flex aligns-items-center text-center justify-content-center mt-5 pt-5">
  <div class="container mt-5 pt-4">
    <h5 class="fw-bold">{{ section.settings.title }}</h5>
    <p class="fw-bold text-center">{{ section.settings.text }}</p>
    <a href="{{ section.settings.button_link }}" class="btn btn-primary">
      {{ section.settings.button_label }}
    </a>
  </div>
</div>

{% schema %}
  {
    "name": "404 Not found",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title of 404",
        "default": "Not Found"
      }, {
        "type": "text",
        "id": "text",
        "label": "Text of 404",
        "default": "Not Found the page"
      }, {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Explore products"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link",
        "default": "/collections/all"
      }
    ]
  }
{% endschema %}